<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowAnimationStyle">@style/ActivityTransition</item>
    </style>
    <style name="FullScreenTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!--// A -> B; A <- B  -->
    <style name="ActivityTransition" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/activity_right_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_right_exit_alpha</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_right_enter_alpha</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_right_exit</item>
    </style>

</resources>